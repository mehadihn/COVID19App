<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity"
    android:background="#f0f0f0">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/roboto_bold"
                   android:text="Dashboard"
                   android:textColor="#5E5E5E"
                   android:textSize="24dp" />

               <View
                   android:layout_width="40dp"
                   android:layout_height="6dp"
                   android:layout_gravity="center"
                   android:layout_marginLeft="8dp"
                   android:background="@drawable/bg_view">

               </View>



           </LinearLayout>

           <LinearLayout
               android:weightSum="4"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <LinearLayout
                   android:layout_weight="3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:fontFamily="@font/roboto_regular"
                       android:text="Let's Beat COVID-19 Together"
                       android:textColor="#5E5E5E"
                       android:textSize="18dp" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:fontFamily="@font/roboto_italic"
                       android:text="Stay Home, Stay Safe"
                       android:textColor="#5E5E5E"
                       android:textSize="15dp" />
               </LinearLayout>
               <RelativeLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center">

                   <ImageView
                       android:id="@+id/credit"
                       android:layout_marginLeft="50dp"
                       android:layout_width="30dp"
                       android:layout_height="30dp"
                       android:src="@drawable/in"/>
               </RelativeLayout>




           </LinearLayout>





           <TextView
               android:id="@+id/greeting"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:fontFamily="@font/roboto_bold"
               android:text="Good Morning"
               android:textColor="#000000"
               android:textSize="30sp" />


           <HorizontalScrollView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">


                   <pl.droidsonroids.gif.GifImageView
                       android:layout_width="230dp"
                       android:layout_height="230dp"
                       android:layout_marginTop="10dp"
                       android:layout_marginRight="20dp"
                       android:layout_marginBottom="10dp"
                       android:src="@drawable/gif02"

                       />

                   <pl.droidsonroids.gif.GifImageView
                       android:layout_width="230dp"
                       android:layout_height="230dp"
                       android:layout_marginTop="10dp"
                       android:layout_marginRight="20dp"
                       android:layout_marginBottom="10dp"
                       android:src="@drawable/gif01" />

                   <pl.droidsonroids.gif.GifImageView
                       android:layout_width="230dp"
                       android:layout_height="230dp"
                       android:layout_marginTop="10dp"
                       android:layout_marginRight="20dp"
                       android:layout_marginBottom="10dp"
                       android:src="@drawable/gif03"

                       />

                   <pl.droidsonroids.gif.GifImageView
                       android:layout_width="230dp"
                       android:layout_height="230dp"
                       android:layout_marginTop="10dp"
                       android:layout_marginRight="20dp"
                       android:layout_marginBottom="10dp"
                       android:src="@drawable/gif04"

                       />

                   <pl.droidsonroids.gif.GifImageView
                       android:layout_width="230dp"
                       android:layout_height="230dp"
                       android:layout_marginTop="10dp"
                       android:layout_marginRight="20dp"
                       android:layout_marginBottom="10dp"
                       android:src="@drawable/gif05"

                       />

                   <pl.droidsonroids.gif.GifImageView
                       android:layout_width="230dp"
                       android:layout_height="230dp"
                       android:layout_marginTop="10dp"
                       android:layout_marginRight="20dp"
                       android:layout_marginBottom="10dp"
                       android:src="@drawable/gif6"

                       />

                   <pl.droidsonroids.gif.GifImageView
                       android:layout_width="230dp"
                       android:layout_height="230dp"
                       android:layout_marginTop="10dp"
                       android:layout_marginRight="20dp"
                       android:layout_marginBottom="10dp"
                       android:src="@drawable/gif07"

                       />


               </LinearLayout>
           </HorizontalScrollView>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="112dp"
                   android:layout_marginTop="8dp"
                   android:orientation="horizontal">

                   <androidx.cardview.widget.CardView
                       android:layout_width="160dp"
                       android:layout_height="110dp"
                       android:layout_weight="1"
                       app:cardCornerRadius="8dp"
                       app:cardElevation="2dp">

                       <RelativeLayout
                           android:id="@+id/bangladesh"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:padding="8dp">

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:fontFamily="@font/roboto_bold"
                               android:text="Bangladesh"
                               android:textColor="#5E5E5E"
                               android:textSize="18dp" />

                           <ImageView
                               android:layout_width="80dp"
                               android:layout_height="80dp"
                               android:layout_alignParentRight="true"
                               android:layout_alignParentBottom="true"
                               android:src="@drawable/bangladesh" />

                       </RelativeLayout>

                   </androidx.cardview.widget.CardView>

                   <androidx.cardview.widget.CardView
                       android:layout_width="160dp"
                       android:layout_height="110dp"
                       android:layout_marginLeft="18dp"
                       android:layout_weight="1"
                       app:cardCornerRadius="8dp"
                       app:cardElevation="2dp">

                       <RelativeLayout
                           android:id="@+id/worldwide"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:padding="8dp">

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:fontFamily="@font/roboto_bold"
                               android:text="Worldwide"
                               android:textColor="#5E5E5E"
                               android:textSize="18dp" />

                           <ImageView
                               android:layout_width="80dp"
                               android:layout_height="80dp"
                               android:layout_alignParentRight="true"
                               android:layout_alignParentBottom="true"
                               android:src="@drawable/world" />

                       </RelativeLayout>

                   </androidx.cardview.widget.CardView>


               </LinearLayout>

               <LinearLayout

                   android:layout_width="match_parent"
                   android:layout_height="112dp"
                   android:layout_marginTop="16dp"
                   android:orientation="horizontal"
                   android:layout_marginBottom="2dp">

                   <androidx.cardview.widget.CardView
                       android:layout_width="160dp"
                       android:layout_height="110dp"
                       android:layout_weight="1"
                       app:cardCornerRadius="8dp"
                       app:cardElevation="2dp">

                       <RelativeLayout
                           android:id="@+id/hospital"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:padding="8dp">

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:fontFamily="@font/roboto_bold"
                               android:text="Hospitals"
                               android:textColor="#5E5E5E"
                               android:textSize="18dp" />

                           <ImageView
                               android:layout_width="80dp"
                               android:layout_height="80dp"
                               android:layout_alignParentRight="true"
                               android:layout_alignParentBottom="true"
                               android:src="@drawable/medical" />

                       </RelativeLayout>

                   </androidx.cardview.widget.CardView>

                   <androidx.cardview.widget.CardView
                       android:layout_width="160dp"
                       android:layout_height="110dp"
                       android:layout_marginLeft="18dp"
                       android:layout_weight="1"
                       app:cardCornerRadius="8dp"
                       app:cardElevation="2dp">

                       <RelativeLayout
                           android:id="@+id/helpline"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:padding="8dp">

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:fontFamily="@font/roboto_bold"
                               android:text="Emergency"
                               android:textColor="#5E5E5E"
                               android:textSize="18dp" />

                           <ImageView
                               android:layout_width="80dp"
                               android:layout_height="80dp"
                               android:layout_alignParentRight="true"
                               android:layout_alignParentBottom="true"
                               android:src="@drawable/helpline" />

                       </RelativeLayout>

                   </androidx.cardview.widget.CardView>


               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="112dp"
                   android:layout_marginTop="16dp"
                   android:layout_marginBottom="8dp"
                   android:orientation="horizontal">

                   <androidx.cardview.widget.CardView
                       android:layout_width="160dp"
                       android:layout_height="110dp"
                       android:layout_weight="1"
                       app:cardCornerRadius="8dp"
                       app:cardElevation="2dp">

                       <RelativeLayout
                           android:id="@+id/handwash"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:padding="8dp">

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:fontFamily="@font/roboto_bold"
                               android:text="Hand Wash"
                               android:textColor="#5E5E5E"
                               android:textSize="18dp" />

                           <ImageView
                               android:layout_width="80dp"
                               android:layout_height="80dp"
                               android:layout_alignParentRight="true"
                               android:layout_alignParentBottom="true"
                               android:src="@drawable/handwash" />

                       </RelativeLayout>

                   </androidx.cardview.widget.CardView>



                   <androidx.cardview.widget.CardView
                       android:layout_width="160dp"
                       android:layout_height="110dp"
                       android:layout_marginLeft="18dp"
                       android:layout_weight="1"
                       app:cardCornerRadius="8dp"
                       app:cardElevation="2dp">



                       <RelativeLayout
                           android:id="@+id/myth"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:padding="8dp">

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:fontFamily="@font/roboto_bold"
                               android:text="Myth Busters"
                               android:textColor="#5E5E5E"
                               android:textSize="18dp" />

                           <ImageView
                               android:layout_width="80dp"
                               android:layout_height="80dp"
                               android:layout_alignParentRight="true"
                               android:layout_alignParentBottom="true"
                               android:src="@drawable/info" />

                       </RelativeLayout>

                   </androidx.cardview.widget.CardView>






               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="112dp"
                   android:layout_marginTop="16dp"
                   android:layout_marginBottom="8dp"
                   android:orientation="horizontal">

                   <androidx.cardview.widget.CardView
                       android:layout_width="160dp"
                       android:layout_height="110dp"
                       android:layout_weight="1"
                       app:cardCornerRadius="8dp"
                       app:cardElevation="2dp">

                       <RelativeLayout
                           android:id="@+id/information"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:padding="8dp">

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:fontFamily="@font/roboto_bold"
                               android:text="Information"
                               android:textColor="#5E5E5E"
                               android:textSize="18dp" />

                           <ImageView
                               android:layout_width="80dp"
                               android:layout_height="80dp"
                               android:layout_alignParentRight="true"
                               android:layout_alignParentBottom="true"
                               android:src="@drawable/inf1" />

                       </RelativeLayout>

                   </androidx.cardview.widget.CardView>



                   <androidx.cardview.widget.CardView
                       android:layout_width="160dp"
                       android:layout_height="110dp"
                       android:layout_marginLeft="18dp"
                       android:layout_weight="1"
                       app:cardCornerRadius="8dp"
                       app:cardElevation="2dp">



                       <RelativeLayout
                           android:id="@+id/newsla"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:padding="8dp">

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:fontFamily="@font/roboto_bold"
                               android:text="News"
                               android:textColor="#5E5E5E"
                               android:textSize="18dp" />

                           <ImageView
                               android:layout_width="80dp"
                               android:layout_height="80dp"
                               android:layout_alignParentRight="true"
                               android:layout_alignParentBottom="true"
                               android:src="@drawable/news" />

                       </RelativeLayout>

                   </androidx.cardview.widget.CardView>






               </LinearLayout>


               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="112dp"
                   android:layout_marginTop="16dp"
                   android:layout_marginBottom="8dp"
                   android:orientation="horizontal">



                   <androidx.cardview.widget.CardView
                       android:layout_width="160dp"
                       android:layout_height="110dp"
                       android:layout_weight="1"
                       app:cardCornerRadius="8dp"
                       app:cardElevation="2dp">

                       <RelativeLayout
                           android:id="@+id/donate"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:padding="8dp">

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:fontFamily="@font/roboto_bold"
                               android:text="Donate"
                               android:textColor="#5E5E5E"
                               android:textSize="18dp" />

                           <ImageView
                               android:layout_width="80dp"
                               android:layout_height="80dp"
                               android:layout_alignParentRight="true"
                               android:layout_alignParentBottom="true"
                               android:src="@drawable/donation" />

                       </RelativeLayout>

                   </androidx.cardview.widget.CardView>



                   <androidx.cardview.widget.CardView
                       android:layout_width="160dp"
                       android:layout_height="110dp"
                       android:layout_marginLeft="18dp"
                       android:layout_weight="1"
                       app:cardCornerRadius="8dp"
                       app:cardElevation="2dp">

                       <RelativeLayout

                           android:id="@+id/faq"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:padding="8dp">

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:fontFamily="@font/roboto_bold"
                               android:text="FAQ"
                               android:textColor="#5E5E5E"
                               android:textSize="18dp" />

                           <ImageView
                               android:layout_width="80dp"
                               android:layout_height="80dp"
                               android:layout_alignParentRight="true"
                               android:layout_alignParentBottom="true"
                               android:src="@drawable/faq" />

                       </RelativeLayout>

                   </androidx.cardview.widget.CardView>








               </LinearLayout>



           </LinearLayout>

       </LinearLayout>






    </ScrollView>







</LinearLayout>